<%= form_for [@article, Comment.new] do |f| %>
  <% if f.object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(f.object.errors.count, "λάθη") %> εμπόδισαν την αποθήκευση αυτού του σχολίου:</h2>

      <ul>
      <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_area :body,:size => "80x5"%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
