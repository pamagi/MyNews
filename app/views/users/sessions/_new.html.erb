<%= form_for(User.new, :url => new_user_session_path) do |f| %>
  <p><%= f.label :email %><br />
  <%= f.text_field :email,:style => "width: 250px" %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password,:style => "width: 250px" %></p>

  <p><%= f.check_box :remember_me %> <%= f.label :remember_me, "Να με θυμάσαι" %></p>

  <p><%= f.submit "Σύνδεση" %></p>
<% end %>

<%= render :partial => "users/shared/links" %>
