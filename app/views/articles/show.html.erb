<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
  <%= link_to @article.user.nickname, user_path(@article.user) %>
</p>

<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Body:</b>
  <%= @article.body %>
</p>

<p>
  <b>Category:</b>
  <%= link_to @article.category.name, category_articles_path(@article.category) %>
</p>


<%= link_to 'Edit', edit_article_path(@article) if can? :update, @article %> |
<%= link_to 'Destroy', @article, :confirm => 'Are you sure?', :method => :delete if can? :destroy, @article %> |
<%= link_to 'Back', articles_path %>

<h1>Comments</h1>
<%= render "comments/list", :collection => @article.comments %>
<h1>Add comment</h1>
<%= render "comments/form" %>
